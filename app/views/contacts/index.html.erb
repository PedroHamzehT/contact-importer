<h2>Contacts</h2>

<table class="table">
  <thead>
    <% safe_fields.each do |field| %>
      <th scope="col"><%= field %></th>
    <% end %>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <% safe_attributes.each do |attr| %>
          <td><%= contact[attr] %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%== pagy_nav(@pagy) %>

<hr>

<a href="/imports/new" class="btn btn-success">Import contacts</a>
